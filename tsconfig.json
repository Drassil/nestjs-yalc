{
  "extends": "@nestjs-yalc/toolkit-config/src/tsconfig.json",
  "compilerOptions": {
    "outDir": "var/dist"
  },
  "include": ["**/src/**/*.ts"],
  "exclude": [
    "**/node_modules",
    "kafka",
    "test",
    "**/__mocks__",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node",
    "files": true,
    "esm": true,
    "swc": true
  }
}
